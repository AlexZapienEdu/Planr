<div>
  <div>
    <h1>
      Dessert Spot: <%= @the_dessert_spot.loc_name %>
    </h1>

    <div>
      <div>
        <a href="/dessert_spots">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_dessert_spot/<%= @the_dessert_spot.id %>">
          Delete this Dessert Spot
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Dessert Spot Name
      </dt>
      <dd>
        <%= @the_dessert_spot.loc_name %>
      </dd>

      <dt>
        Recommended by
      </dt>
      <dd>
        <%= @the_dessert_spot.dess_user.username.capitalize %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @the_dessert_spot.dess_category.category_name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_dessert_spot.desc %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_dessert_spot.image %>
      </dd>

    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit this Dessert Spot
    </h2>

    <form action="/modify_dessert_spot/<%= @the_dessert_spot.id %>"  method="post" >
      <div>
        <label for="loc_name_box">
          Dessert Spot Name
        </label>

        <input type="text" id="loc_name_box" name="query_loc_name" value="<%= @the_dessert_spot.loc_name %>">
      </div>


      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_name" value="<%= @the_dessert_spot.dess_category.category_name %>">
      </div>

      <div>
        <label for="desc_box">
          Description
        </label>

        <textarea id="desc_box" name="query_desc"><%= @the_dessert_spot.desc %></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_dessert_spot.image %>">
      </div>

      <button>
        Update Dessert Spot
      </button>
    </form>
  </div>
</div>

<hr>
