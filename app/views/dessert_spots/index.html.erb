<div>
  <div>
    <h1>
      List of all dessert spots
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new dessert spot
    </h2>

    <form action="/insert_dessert_spot" method="post">
      <div>
        <label for="loc_name_box">
          Dessert Spot name
        </label>

        <input type="text" id="loc_name_box" name="query_loc_name">
      </div>

      <div>
        <label for="category_id_box">
          Category
        </label>

         <select  type="text" id="category_id_box" name="query_category_name">
        <% $list_of_categories.each do |a_cat| %>
        <option>
          <%= a_cat.category_name %>
        </option>
        <% end %>
      </select>
      
      </div>

      <div>
        <label for="desc_box">
          Description
        </label>

        <textarea id="desc_box" name="query_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Create dessert spot
      </button>
    </form>



    
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Dessert Spot
        </th>

        <th>
          Visited by
        </th>

        <th>
          Category
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_dessert_spots.each do |a_dessert_spot| %>
      <tr>

        <td>
          <%= a_dessert_spot.loc_name %>
        </td>

        <td>
          <%= a_dessert_spot.dess_user.username.capitalize %>
        </td>

        <td>
          <%= a_dessert_spot.dess_category.category_name %>
        </td>

        <td>
          <%= a_dessert_spot.desc %>
        </td>

        <td>
          <%= a_dessert_spot.image %>
        </td>

        <td>
          <a href="/dessert_spots/<%= a_dessert_spot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
