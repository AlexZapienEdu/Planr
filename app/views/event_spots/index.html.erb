<div>
  <div>
    <h1>
      List of all event spots
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new event spot
    </h2>

    <form action="/insert_event_spot" method="post">
      <div>
        <label for="event_name_box">
          Event name
        </label>

        <input type="text" id="event_name_box" name="query_event_name">
      </div>


      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <div>
        <label for="desc_box">
          Desc
        </label>

        <textarea id="desc_box" name="query_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Create event spot
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Event name
        </th>

        <th>
          Visitor
        </th>

        <th>
          Category
        </th>

        <th>
          Desc
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_event_spots.each do |an_event_spot| %>
      <tr>
        <td>
          <%= an_event_spot.id %>
        </td>

        <td>
          <%= an_event_spot.event_name %>
        </td>

        <td>
          <%= an_event_spot.visitor_id %>
        </td>

        <td>
          <%= an_event_spot.category_id %>
        </td>

        <td>
          <%= an_event_spot.desc %>
        </td>

        <td>
          <%= an_event_spot.image %>
        </td>

        <td>
          <%= time_ago_in_words(an_event_spot.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_event_spot.updated_at) %> ago
        </td>

        <td>
          <a href="/event_spots/<%= an_event_spot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
