<div>
  <div>
    <h1>
      Event Spots
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a New Event Spot
    </h2>

    <form action="/insert_event_spot" method="post">
    
     
     
      <div>
        <label for="event_name_box">
          Event Name
        </label>

        <input type="text" id="event_name_box" name="query_event_name">
      </div>


      <div>
        <label for="category_id_box">
          Category
        </label>
         <select  type="text" id="category_id_box" name="query_category_name">
        <% $list_of_categories.each do |a_cat| %>
        <option>
          <%= a_cat.category_name %>
        </option>
        <% end %>
      </select>
      </div>

      <div>
        <label for="desc_box">
          Description
        </label>

        <textarea id="desc_box" name="query_desc" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Create event spot
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Event name
        </th>

        <th>
          Visited by
        </th>

        <th>
          Category
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
        </th>
      </tr>

      <% $list_of_event_spots.each do |an_event_spot| %>
      <tr>
        <td>
          <%= an_event_spot.event_name %>
        </td>

        <td>
          <%= an_event_spot.event_visitor.username.capitalize %>
        </td>

        <td>
          <%= an_event_spot.event_category.category_name %>
        </td>

        <td>
          <%= an_event_spot.desc %>
        </td>

        <td>
          <%= an_event_spot.image %>
        </td>


        <td>
          <a href="/event_spots/<%= an_event_spot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
