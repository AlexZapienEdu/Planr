<div>
  <div>
    <h1>
      List of all categories
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a New Category
    </h2>

    <form action="/insert_category" method="post">
      <div>
        <label for="category_name_box">
          Category Name
        </label>

        <input type="text" id="category_name_box" name="query_category_name">
      </div>
      <button>
        Create Category
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Category Name
        </th>

        <th>
        </th>
      </tr>

      <% $list_of_categories.each do |a_category| %>
      <tr>

        <td>
          <%= a_category.category_name %>
        </td>

        <td>
          <a href="/categories/<%= a_category.id %>">
           Edit
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
